<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_user_select">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white_87"
            android:textSize="48sp"

            android:text="MYMOA"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white_87"
            android:layout_marginTop="8dp"
            android:text="绵阳移动办公系统"
            android:textSize="18sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/selector_button_primary"
            android:text="注册"
            android:id="@+id/signinButton"
            android:textColor="@color/text_white_87"
            android:textSize="18sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="登录"
            android:layout_marginTop="24dp"
            android:id="@+id/loginButton"
            android:background="@drawable/selector_button_second"
            android:textSize="18sp"
            android:textColor="@color/text_black_54"/>
    </LinearLayout>

</RelativeLayout>