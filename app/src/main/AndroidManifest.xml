<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uestc.mymoa">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ActionBarTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBarTheme"></activity>
        <activity
            android:name=".ui.UserLoginActivity"
            android:label="登录"></activity>

        <activity
            android:name=".ui.UserSelectActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.UserSigninActivity"
            android:label="注册"></activity>
        <activity
            android:name=".ui.FileManageActivity"
            android:label="文档管理"></activity>
        <activity
            android:name=".ui.FileManageAddActivity"
            android:label="新建文档"></activity>
        <activity
            android:name=".ui.FileManageDetailActivity"
            android:label="文档详情"></activity>
        <activity
            android:name=".ui.FileManageSearchActivity"
            android:label="搜索文档"></activity>
        <activity
            android:name=".ui.FileManageEditActivity"
            android:label="编辑文档"></activity>
        <activity
            android:name=".ui.PostAddActivity"
            android:label="发布公告"></activity>
        <activity
            android:name=".ui.PostDetailActivity"
            android:label="公告详情"></activity>
        <activity
            android:name=".ui.MailSendNewActivity"
            android:label="发送新消息"></activity>
        <activity
            android:name=".ui.MailItemContentActivity"
            android:label="消息内容"></activity>
        <activity
            android:name=".ui.NewsReleaseActivity"
            android:label="发布新消息"></activity>
        <activity
            android:name=".ui.NewsListActivity"
            android:label="新闻列表"></activity>
        <activity
            android:name=".ui.NewsReleaseActivity"
            android:label="发布新闻"></activity>
        <activity
            android:name=".ui.ContactGroupListActivity"
            android:label="我的群组"></activity>
        <activity
            android:name=".ui.NewsContentActivity"
            android:label="新闻详情"></activity>

        <activity
            android:name=".ui.ContactGroupDetailActivity"
            android:label="群组详情"></activity>
        <activity
            android:name=".ui.ContactDetailActivity"
            android:label="联系人信息"></activity>
        <activity
            android:name=".ui.ProfileActivity"
            android:label="个人中心"></activity>
    </application>


</manifest>
